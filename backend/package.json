{
  "name": "cad-ai-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:unit": "vitest run src/__tests__/unit/",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:e2e": "vitest run src/__tests__/e2e/",
    "test:performance": "vitest run src/__tests__/performance/",
    "test:security": "vitest run src/__tests__/security/",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:security",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:migrate:rollback": "tsx src/database/migrate.ts rollback",
    "db:migrate:status": "tsx src/database/migrate.ts status",
    "db:seed": "tsx src/database/seed.ts",
    "db:validate": "tsx src/database/validate.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "performance:benchmark": "tsx src/scripts/performance-benchmark.ts",
    "performance:test": "vitest run src/__tests__/performance/",
    "security:scan": "tsx src/scripts/security-assessment.ts",
    "test:comprehensive": "tsx src/scripts/run-comprehensive-tests.ts",
    "test:all": "npm run test:comprehensive",
    "coverage:generate": "tsx src/scripts/generate-coverage-report.ts",
    "coverage:report": "npm run coverage:generate"
  },
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "aws-sdk": "^2.1471.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "ioredis-mock": "^8.9.0",
    "supertest": "^6.3.3",
    "tsx": "^3.14.0",
    "typescript": "^5.0.2",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "artillery": "^2.0.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "jest-mock": "^29.7.0",
    "zaproxy": "^0.2.0"
  }
}
