# CAD AI Platform Production Environment Configuration

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://cadai-platform.com
API_URL=https://api.cadai-platform.com

# Database
DATABASE_URL=postgresql://cadai_user:${DB_PASSWORD}@postgres:5432/cadai_prod
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cadai_prod
DB_USER=cadai_user
DB_PASSWORD=${DB_PASSWORD}

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# File Storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}
S3_BUCKET=${S3_BUCKET}
S3_ENDPOINT=${S3_ENDPOINT}

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}
ENCRYPTION_ALGORITHM=aes-256-gcm

# AI Service
AI_SERVICE_URL=http://ai-service:8000
OPENAI_API_KEY=${OPENAI_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Logging
LOG_LEVEL=info
ELASTICSEARCH_URL=http://elasticsearch:9200

# Backup
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_RETENTION_DAYS=30

# Notifications
WEBHOOK_URL=${WEBHOOK_URL}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}

# SSL
SSL_DOMAIN=${SSL_DOMAIN}
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://cadai-platform.com

# Performance
MAX_FILE_SIZE=500MB
MAX_CONCURRENT_UPLOADS=5
CACHE_TTL=3600

# Docker Image Tags
IMAGE_TAG=latest