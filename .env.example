# CAD AI Platform Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cad_ai_platform
POSTGRES_DB=cad_ai_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=cad-files
MINIO_USE_SSL=false

# API Configuration
BACKEND_PORT=3001
AI_SERVICE_PORT=8002
FRONTEND_PORT=3000

# API URLs
VITE_API_URL=http://localhost:3001
VITE_AI_SERVICE_URL=http://localhost:8002

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=dwg,dxf,step,stp,iges,igs,obj,stl

# AI/ML Configuration
MODEL_STORAGE_PATH=./models
TRAINING_DATA_PATH=./training_data
MAX_TRAINING_JOBS=3

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
NODE_ENV=development
PYTHONPATH=/app